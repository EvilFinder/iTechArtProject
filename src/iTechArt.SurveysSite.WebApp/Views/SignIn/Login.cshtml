@model iTechArt.SurveysSite.WebApp.ViewModels.UserViewModel
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="/css/LoginAndRegistration.css" rel="stylesheet"/>
</head>
<div class="simple-login-container">
    <h2>Login</h2>
    <form method="post" asp-controller="SignIn" asp-action="Login">
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="UserName"></label>
                <input type="text" class="form-control" asp-for="UserName" autocomplete="off"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" autocomplete="off"/>
            </div>
        </div>
        <div class="row">
            @Html.ValidationSummary(false)
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <input type="submit" class="btn btn-block btn-login" value="Sign in">
            </div>
        </div>
    </form>
</div>